@model APRaye7.Models.ViewModels.PlaceVM
@using APRaye7.App_GlobalResources
@{
    ViewBag.Title = Places_resource.PageTitle;
    ViewBag.SubTitle = Places_resource.Edit;
}
@*@Styles.Render("~/AdminLTE/plugins/daterangepicker/css")*@
@Styles.Render("~/AdminLTE/plugins/datepicker/js/scriptjavascript")
@Styles.Render("~/AdminLTE/plugins/icheck/css/styles")
@Styles.Render("~/AdminLTE/plugins/colorpicker/css/styles")
@Styles.Render("~/AdminLTE/plugins/timepicker/css/styles")
@Styles.Render("~/AdminLTE/plugins/select2/css/styles")
@Styles.Render("~/AdminLTE/dist/css/styles")
@Styles.Render("~/AdminLTE/dist/css/skins/styles")

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
            </div>
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)



                        <div class="input-group" style="width:300px;">
                            <label><b>@Places_resource.BranchName</b></label>
                            @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Enter Branch Name" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group" style="width:300px;">
                            <label><b>@Places_resource.Longitude</b></label>
                            @Html.EditorFor(m => m.longitude, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Longitude" } })
                            @Html.ValidationMessageFor(model => model.longitude, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group" style="width:300px;">
                            <label><b>@Places_resource.Latitude</b></label>
                            @Html.EditorFor(m => m.latitude, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Latitude" } })
                            @Html.ValidationMessageFor(model => model.latitude, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group" style="width:300px;">
                        <label><b>@Places_resource.Description</b></label>
                        @Html.EditorFor(m => m.description, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Description" } })
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </div>
                        <br />
                        <button type="submit" value="Save" class="btn btn-primary">Submit</button>
                    </div>



                </div>
            }
        </div>
    </div>
    </div>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/select2/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/input-mask/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/momentjs/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/daterangepicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/colorpicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/timepicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")

}
