@using APRaye7.App_GlobalResources
@using APRaye7.Shared
@model APRaye7.Models.ViewModels.TripVM
@{
    ViewBag.Title = "Trip Edit Log";
}
@Styles.Render("~/AdminLTE/plugins/datatables/css/styles")
@Scripts.Render("~/AdminLTE/plugins/datatables/js/scriptjavascript")
@Scripts.Render("~/Scripts/ChangeLogs/TripsEditLog.js")
<style>
    .table {
        width: 100% !important;
    }

    .dataTables_scrollHeadInner {
        width: 100% !important;
    }

    .dataTables_scrollFootInner {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">

            <div class="box-body">

                <ul class="list-group list-group-unbordered">

                    @Html.HiddenFor(m => m.ChangeLogId)
                    <li class="list-group-item">
                        <b>@Trips_resource.Departure_Time</b> <a class="pull-right">@Html.DisplayFor(m => m.Departure_Time)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.Seats</b> <a class="pull-right">@Html.DisplayFor(m => m.Seats)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.Points</b> <a class="pull-right">@Html.DisplayFor(m => m.Points)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_SourceName</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_SourceName)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_SourceID</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_SourceID)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_DestinationName</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_DestinationName)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_DestinationID</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_DestinationID)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_DriverName</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_DriverName)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.FK_DriverID</b> <a class="pull-right">@Html.DisplayFor(m => m.FK_DriverID)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.Deleted</b> <a class="pull-right">@Model.Deleted.ToString()</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.Created_At</b> <a class="pull-right">@Html.DisplayFor(m => m.Created_At)</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Trips_resource.Updated_At</b> <a class="pull-right">@Html.DisplayFor(m => m.Updated_At)</a>
                    </li>
                </ul>
               
            </div>
        </div>

    </div>

</div>
