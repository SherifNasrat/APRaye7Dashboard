@using APRaye7.App_GlobalResources
@using APRaye7.Shared
@model APRaye7.Models.ViewModels.UserVM
@{
    ViewBag.Title = "User Edit Log";
}
@Styles.Render("~/AdminLTE/plugins/datatables/css/styles")
@Scripts.Render("~/AdminLTE/plugins/datatables/js/scriptjavascript")
@Scripts.Render("~/Scripts/ChangeLogs/UserEditLog.js")
<style>
    .table {
        width: 100% !important;
    }

    .dataTables_scrollHeadInner {
        width: 100% !important;
    }

    .dataTables_scrollFootInner {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-body box-profile">

                @if (Model.Personal_Image == null || Model.Personal_Image == "")
                {
                    @:<img class="profile-user-img img-responsive img-circle" src="@Url.Action("noUserProfilePicture","Users")">


                }
                else
                {
                    @:<img class="profile-user-img img-responsive img-circle" src="@Url.Action("loadUserPicture","Users",new { Personal_Image = Model.Personal_Image })">
                }

                <h3 class="profile-username text-center">@Model.First_Name @Model.Last_Name</h3>
                <p class="text-muted text-center">@Model.Email</p>
                <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                        <b>@Users_resource.Phone_Number</b> <a class="pull-right">@Model.Phone_Number</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Users_resource.Gender</b> <a class="pull-right">@Model.Gender</a>
                    </li>
                    <li class="list-group-item">
                        <b>@Users_resource.Last_Seen</b> <a class="pull-right">@Model.Last_Seen</a>
                    </li>
                </ul>
                @*<a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>*@
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Users_resource.UserDetails</h3>
            </div>
            <div class="box-body">
                <strong> @Users_resource.Business_Purpose</strong>
                <p class="text-muted">
                    @Model.Business_Purpose
                </p>
                <hr>
                <strong>@Users_resource.Have_Car</strong>
                <p class="text-muted">@Model.Have_Car</p>
                <hr>
                <strong>@Users_resource.Same_Gender</strong>
                <p>
                    @Model.Same_Gender
                </p>
                <hr>
                <strong>@Users_resource.Smoking</strong>
                <p>@Model.Smoking</p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Users_resource.UserPointsDetailed</h3>
            </div>
            <div class="box-body">
                <strong> @Users_resource.User_Points</strong>
                <p class="text-muted">
                    @Model.User_Points
                </p>
                <hr>
                <strong>@Users_resource.Driven_Points</strong>
                <p class="text-muted">@Model.Driven_Points</p>
                <hr>
                <strong>@Users_resource.Rating</strong>
                <p>
                    @Model.Rating
                </p>
                <hr>
                <strong>@Users_resource.Current_Sign_In_At</strong>
                <p>@Model.Current_Sign_In_At</p>
                <hr>
                <strong>@Users_resource.Created_At</strong>
                <p>@Model.Created_At</p>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="info-box" style="width:320px;">
                <span class="info-box-icon bg-yellow"><i class="fa fa-car"></i></span>
                <div class="info-box-content" style="text-wrap:normal">
                    <span class="info-box-text" style="white-space:nowrap">@Users_resource.NumberOfRides</span>
                    <span class="info-box-number">@Model.NumberOfRides</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-push-12">
        <div class="box" style="width:100%;">
            @*<div class="box-header">

                    <h3 class="box-title">@Resources.Users_resource.PageTitle</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>*@

            <div class="box-body">
                <table id="UsersEditLog" class="table table-striped table-hover" style="width:100% !important">
                    <thead>

                        <tr>
                            <th>@SystemUser_resource.ChangeLogDetailsId</th>
                            <th>@SystemUser_resource.Field</th>
                            <th>@SystemUser_resource.PreviousValue</th>
                            <th>@SystemUser_resource.NewValue</th>
                            <th>@SystemUser_resource.DetailDate</th>


                        </tr>

                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var dataURL = '@Url.Action("getUsersEditLog","ChangeLogs",new { @changeLogId = Model.ChangeLogId })';
</script>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")


}