@model APRaye7.Models.ViewModels.SystemUser.SystemUserVM
@using APRaye7.Shared
@{
    Layout = null;
    ViewBag.Title = Resources.ForgetPassword.PageTitle;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Resources.ForgetPassword.PageTitle</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/AdminLTE/bootstrap/css/styles")
    @Styles.Render("~/AdminLTE/plugins/font-awesome/css/styles")
    @Styles.Render("~/AdminLTE/plugins/ionicons/css/styles")
    @Styles.Render("~/AdminLTE/dist/css/styles")
    @Styles.Render("~/AdminLTE/plugins/icheck/css/styles")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Home")"><b>@Resources.Login_resource.WelcomeTitle</b></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Forgot Your Password ?</p>
            @using (Html.BeginForm("ForgetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.EmailNoValidation, new { @class = "form-control", type = "text", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.EmailNoValidation, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Email Link</button>
                    </div>
                </div>
            }
        </div>
    </div>

    @Scripts.Render("~/AdminLTE/plugins/jquery/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/bootstrap/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/js/scriptjavascript")
    @Scripts.Render("~/Scripts/Account/Login/scriptjavascript")

</body>



</html>

