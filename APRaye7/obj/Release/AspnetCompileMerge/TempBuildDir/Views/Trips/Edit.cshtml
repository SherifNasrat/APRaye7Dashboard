@model APRaye7.Models.ViewModels.TripVM
    @using APRaye7.App_GlobalResources
@{
    ViewBag.Title = Trips_resource.PageTitle;
    ViewBag.SubTitle = Trips_resource.Edit;
}
@*@Styles.Render("~/AdminLTE/plugins/daterangepicker/css")*@
@Styles.Render("~/AdminLTE/plugins/datepicker/js/scriptjavascript")
@Styles.Render("~/AdminLTE/plugins/icheck/css/styles")
@Styles.Render("~/AdminLTE/plugins/colorpicker/css/styles")
@Styles.Render("~/AdminLTE/plugins/timepicker/css/styles")
@Styles.Render("~/AdminLTE/plugins/select2/css/styles")
@Styles.Render("~/AdminLTE/dist/css/styles")
@Styles.Render("~/AdminLTE/dist/css/skins/styles")
@Scripts.Render("~/Scripts/Trips/Edit.js/scriptjavascript")
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
            </div>
           @using (Html.BeginForm())
           {
            <div class="box-body">
                <div class="form-group">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.TripID)
                   
                    <div class="input-group" style="width:300px;">
                        
                        <div class="input-group-addon" style="width:auto;">
                            
                            <i class="fa fa-calendar"></i>
                            <label style="display:inline"><b>@Trips_resource.Departure_Time</b></label>
                        </div>
                    
                        @Html.EditorFor(m => m.Departure_Time, new { htmlAttributes = new { @class = "form-control", @id = "departure_time", @type = "text" } })
                        @Html.ValidationMessageFor(model => model.Departure_Time, "", new { @class = "text-danger" })
                    </div>
                 
                    <div class="input-group" style="width:300px;">
                        <label ><b>@Trips_resource.Seats</b></label>
                        @Html.EditorFor(m => m.Seats, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Enter Seats" } })
                        @Html.ValidationMessageFor(model => model.Seats, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group" style="width:300px;">
                        <label><b>@Trips_resource.Points</b></label>
                        @Html.EditorFor(m => m.Points, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", @palceholder = "Enter Points" } })
                        @Html.ValidationMessageFor(model => model.Points, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group" style="width:300px;">
                        <label><b>@Trips_resource.FK_SourceName</b></label>
                        @Html.DropDownListFor(m => m.FK_SourceID, ViewBag.FK_PlaceIDs as IEnumerable<SelectListItem>,new {@class= "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.FK_SourceID, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group" style="width:300px;">
                        <label><b>@Trips_resource.FK_DestinationName</b></label>
                        @Html.DropDownListFor(m => m.FK_DestinationID, ViewBag.FK_PlaceIDs as IEnumerable<SelectListItem>, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.FK_DestinationID, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group" style="width:300px;">
                        <label><b>@Trips_resource.FK_DriverName</b></label>
                        @Html.DropDownListFor(m => m.FK_DriverID, ViewBag.FK_DriverIDs as IEnumerable<SelectListItem>, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.FK_DriverID, "", new { @class = "text-danger" })
                    </div>
              
                    <div class="input-group" style="width:300px;">
                        <label style="margin-right:10px"><b>Deleted</b></label>  
                        @Html.CheckBoxFor(m => m.Deleted, new  { @id= "DeletedCheckBox" })
                    </div>
                    <button type="submit" value="Save" class="btn btn-primary">Submit</button>
                </div>


                
            </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/select2/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/input-mask/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/momentjs/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/daterangepicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/colorpicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/timepicker/js/scriptjavascript")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js/scriptjavascript")

}
